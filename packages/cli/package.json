        "cli": "node ./dist/index.js"
    },
    "dependencies": {
        "commander": "^11.1.0",
        "inquirer": "^9.2.12",
        "chalk": "^5.3.0",
        "ora": "^8.0.1",
        "@atlas/core": "*"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/inquirer": "^9.0.7",
        "typescript": "^5.3.0"
    }
}
