{
    "name": "@atlas/cli",
    "version": "0.1.0",
    "description": "Command-line interface for Atlas",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "atlas": "./dist/index.js"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
